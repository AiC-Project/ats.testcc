<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_margin"
    android:orientation="horizontal"
    tools:context="aic.zenika.com.sensor.controller.fragment.AccelerometerFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="end"
                android:paddingEnd="@dimen/default_margin"
                android:text="@string/accelerometer_x_label" />
            <TextView
                android:id="@+id/accelerometer_x"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingStart="@dimen/default_margin"
                android:textColor="@color/White"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="end"
                android:paddingEnd="@dimen/default_margin"
                android:text="@string/accelerometer_y_label" />
            <TextView
                android:id="@+id/accelerometer_y"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingStart="@dimen/default_margin"
                android:textColor="@color/White"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="end"
                android:paddingEnd="@dimen/default_margin"
                android:text="@string/accelerometer_z_label" />
            <TextView
                android:id="@+id/accelerometer_z"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingStart="@dimen/default_margin"
                android:textColor="@color/White"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="end"
                android:paddingEnd="@dimen/default_margin"
                android:text="@string/sensor_name" />
            <TextView
                android:id="@+id/accelerometer_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingStart="@dimen/default_margin"
                android:textColor="@color/White"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="end"
                android:paddingEnd="@dimen/default_margin"
                android:text="@string/sensor_vendor" />
            <TextView
                android:id="@+id/accelerometer_vendor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingStart="@dimen/default_margin"
                android:textColor="@color/White"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="end"
                android:paddingEnd="@dimen/default_margin"
                android:text="@string/sensor_power" />
            <TextView
                android:id="@+id/accelerometer_power"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingStart="@dimen/default_margin"
                android:textColor="@color/White"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="end"
                android:paddingEnd="@dimen/default_margin"
                android:text="@string/sensor_range" />
            <TextView
                android:id="@+id/accelerometer_range"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingStart="@dimen/default_margin"
                android:textColor="@color/White"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="end"
                android:paddingEnd="@dimen/default_margin"
                android:text="@string/sensor_resolution" />
            <TextView
                android:id="@+id/accelerometer_resolution"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingStart="@dimen/default_margin"
                android:textColor="@color/White"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <com.androidplot.xy.XYPlot
        android:id="@+id/aprHistoryPlot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp"
        />
</LinearLayout>
