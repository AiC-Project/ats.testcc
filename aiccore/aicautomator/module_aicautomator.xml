<?xml version="1.0" encoding="UTF-8"?>
<project name="module_aicautomator" default="compile.module.aicautomator">
  <dirname property="module.aicautomator.basedir" file="${ant.file.module_aicautomator}"/>
  
  <property name="module.jdk.home.aicautomator" value="${jdk.home.android_api_22_platform}"/>
  <property name="module.jdk.bin.aicautomator" value="${jdk.bin.android_api_22_platform}"/>
  <property name="module.jdk.classpath.aicautomator" value="jdk.classpath.android_api_22_platform"/>
  
  <property name="compiler.args.aicautomator" value="-encoding UTF-8 -source 1.7 ${compiler.args}"/>
  
  <property name="aicautomator.output.dir" value="${module.aicautomator.basedir}/build/intermediates/classes/debug"/>
  <property name="aicautomator.testoutput.dir" value="${module.aicautomator.basedir}/build/intermediates/classes/test/debug"/>
  
  <path id="aicautomator.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="aicautomator.module.production.classpath">
    <path refid="${module.jdk.classpath.aicautomator}"/>
    <path refid="library.appcompat-v7-22.0.0.classpath"/>
    <path refid="library.uiautomator-v18-2.0.0.classpath"/>
    <path refid="library.support-v4-22.0.0.classpath"/>
    <path refid="library.support-annotations-22.0.0.classpath"/>
  </path>
  
  <path id="aicautomator.runtime.production.module.classpath">
    <pathelement location="${aicautomator.output.dir}"/>
    <path refid="library.appcompat-v7-22.0.0.classpath"/>
    <path refid="library.uiautomator-v18-2.0.0.classpath"/>
    <path refid="library.support-v4-22.0.0.classpath"/>
    <path refid="library.support-annotations-22.0.0.classpath"/>
  </path>
  
  <path id="aicautomator.module.classpath">
    <path refid="${module.jdk.classpath.aicautomator}"/>
    <pathelement location="${aicautomator.output.dir}"/>
    <path refid="library.appcompat-v7-22.0.0.classpath"/>
    <path refid="library.uiautomator-v18-2.0.0.classpath"/>
    <path refid="library.support-v4-22.0.0.classpath"/>
    <path refid="library.support-annotations-22.0.0.classpath"/>
  </path>
  
  <path id="aicautomator.runtime.module.classpath">
    <pathelement location="${aicautomator.testoutput.dir}"/>
    <pathelement location="${aicautomator.output.dir}"/>
    <path refid="library.appcompat-v7-22.0.0.classpath"/>
    <path refid="library.uiautomator-v18-2.0.0.classpath"/>
    <path refid="library.support-v4-22.0.0.classpath"/>
    <path refid="library.support-annotations-22.0.0.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.aicautomator">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.aicautomator">
    <patternset refid="excluded.from.module.aicautomator"/>
  </patternset>
  
  <path id="aicautomator.module.sourcepath">
    <dirset dir="${module.aicautomator.basedir}">
      <include name="build/generated/source/r/debug"/>
      <include name="build/generated/source/aidl/debug"/>
      <include name="build/generated/source/buildConfig/debug"/>
      <include name="build/generated/source/rs/debug"/>
      <include name="build/generated/res/rs/debug"/>
      <include name="src/main/res"/>
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  <path id="aicautomator.module.test.sourcepath">
    <dirset dir="${module.aicautomator.basedir}">
      <include name="build/generated/source/r/test/debug"/>
      <include name="build/generated/source/aidl/test/debug"/>
      <include name="build/generated/source/buildConfig/test/debug"/>
      <include name="build/generated/source/rs/test/debug"/>
      <include name="build/generated/res/rs/test/debug"/>
      <include name="src/androidTest/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.aicautomator" depends="compile.module.aicautomator.production,compile.module.aicautomator.tests" description="Compile module aicautomator"/>
  
  <target name="compile.module.aicautomator.production" depends="register.custom.compilers" description="Compile module aicautomator; production classes">
    <mkdir dir="${aicautomator.output.dir}"/>
    <javac2 destdir="${aicautomator.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.aicautomator}/javac">
      <compilerarg line="${compiler.args.aicautomator}"/>
      <bootclasspath refid="aicautomator.module.bootclasspath"/>
      <classpath refid="aicautomator.module.production.classpath"/>
      <src refid="aicautomator.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.aicautomator"/>
    </javac2>
    
    <copy todir="${aicautomator.output.dir}">
      <fileset dir="${module.aicautomator.basedir}/build/generated/source/r/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.aicautomator.basedir}/build/generated/source/aidl/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.aicautomator.basedir}/build/generated/source/buildConfig/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.aicautomator.basedir}/build/generated/source/rs/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.aicautomator.basedir}/build/generated/res/rs/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.aicautomator.basedir}/src/main/res">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.aicautomator.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.aicautomator.tests" depends="register.custom.compilers,compile.module.aicautomator.production" description="compile module aicautomator; test classes" unless="skip.tests">
    <mkdir dir="${aicautomator.testoutput.dir}"/>
    <javac2 destdir="${aicautomator.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.aicautomator}/javac">
      <compilerarg line="${compiler.args.aicautomator}"/>
      <bootclasspath refid="aicautomator.module.bootclasspath"/>
      <classpath refid="aicautomator.module.classpath"/>
      <src refid="aicautomator.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.aicautomator"/>
    </javac2>
    
    <copy todir="${aicautomator.testoutput.dir}">
      <fileset dir="${module.aicautomator.basedir}/build/generated/source/r/test/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.aicautomator.basedir}/build/generated/source/aidl/test/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.aicautomator.basedir}/build/generated/source/buildConfig/test/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.aicautomator.basedir}/build/generated/source/rs/test/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.aicautomator.basedir}/build/generated/res/rs/test/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.aicautomator.basedir}/src/androidTest/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.aicautomator" description="cleanup module">
    <delete dir="${aicautomator.output.dir}"/>
    <delete dir="${aicautomator.testoutput.dir}"/>
  </target>
</project>